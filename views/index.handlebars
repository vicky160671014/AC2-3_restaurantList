<!-- ./views/index.handlebars -->
<div>
  <!-- search bar -->
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2 search-bar-title">尋找餐廳：</h4>
          <div class="d-flex flex-sm-row align-items-sm-center gap-2">

            <div class="input-group mb-2 mb-sm-0 mr-sm-2">
              <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
            
            <div class="dropdown">
              <button class="btn btn-major ml-1 dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown"
                aria-expanded="false">
                sorting button
              </button>
              <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                <li><a class="dropdown-item" href="/sort/nameAsc">A - Z</a></li>
                <li><a class="dropdown-item" href="/sort/nameDesc">Z - A</a></li>
                <li><a class="dropdown-item" href="/sort/category">類別</a></li>
                <li><a class="dropdown-item" href="/sort/location">地區</a></li>
              </ul>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row row-cols-sm-3">
          {{#each restaurants}}
          <div class="col">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
            
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
            
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
            
              </div>
              <div class="card-footer d-flex flex-row justify-content-end flex-wrap">
                <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
                <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
                <form action="/restaurants/{{this._id}}/delete" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm text-white">delete</button>
                </form>
              </div>
            </div>
          </div>
            
          {{/each}}
        </div>
      </div>
    </div>
  </div>


</div>